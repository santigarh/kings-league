---
import Logo from './Logo.astro'

const response = await fetch(
  'https://kinsgleague.santigarh-77.workers.dev/teams'
)
const teams = await response.json()
---

<header
  class="flex items-center w-screen bg-gradient-to-b from-[#00ff87] via-[#00ff87] to-[#60efff] p-8 gap-x-8"
>
  <Logo />
  <div class="flex flex-col h-full gap-4">
    <nav>
      <ul class="rounded-xl flex gap-x-4 [&>li>a:hover]:scale-150">
        {
          teams.map(({ id, image, name }) => (
            <li>
              <a class="block transition" href={`/team/${id}`}>
                <img
                  src={image}
                  class="group-hover:drop-shadow-[0px_0px_8px_#fff] aspect-square w-16 drop-shadow-[0px_0px_4px_#fff]"
                  alt={`Escudo del equipo ${name}`}
                />
              </a>
            </li>
          ))
        }
      </ul>
    </nav>
    <nav>
      <ul
        class="flex gap-x-4 font-semibold text-md [&>li>a:hover]:opacity-100 [&>li>a:hover]:underline"
      >
        <li>
          <a href="/equipos">Equipos</a>
        </li>
        <li>
          <a href="/calendario">Calendario</a>
        </li>
        <li>
          <a href="/estadisticas">Estadist√≠cas</a>
        </li>
        <li>
          <a href="/contacto">Contacto</a>
        </li>
        <li>
          <a href="/reglamento">Reglamento</a>
        </li>
      </ul>
    </nav>
  </div>
</header>

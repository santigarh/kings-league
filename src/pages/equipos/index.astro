---
import Layout from '../../layouts/Layout.astro'
import { getAllTeams } from '../../services/teams'
import Container from '../components/Container.astro'
import SectionTitle from '../components/SectionTitle.astro'

const teams = await getAllTeams()
---

<Layout title="Equipos">
  <SectionTitle title="Equipos" />
  <Container>
    <div class="bg-white p-20 shadow-xl rounded -mt-10 z-10">
      <section class="grid grid-cols-3 gap-8">
        {
          teams.map((team) => {
            const { id, name, imageWhite } = team
            return (
              <article class="overflow-hidden col-span-1 aspect-video rounded  bg-blue-400">
                <a
                  href={`/team/${id}`}
                  class="transition group hover:scale-110 flex relative h-full items-center justify-center relative"
                  title={`Ver equipo ${name}`}
                >
                  <img
                    alt={`Logo del equipo ${name}`}
                    class="transtition-all group-hover:scale-110 group-hover:brightness-200 w-28 h-28 brightness-[100]"
                    src={imageWhite}
                  />
                  <h3 class="z-10 font-black text-white text-3xl">{name}</h3>
                  <div
                    class={`z-10 absolute inset-0 opacity-50 bg-[url('${imageWhite}')] bg-center bg-[size:150%] group-hover:bg-[size:200%] transition`}
                  />
                </a>
              </article>
            )
          })
        }
      </section>
    </div>
  </Container>
</Layout>
